@model MoviePoint.Models.Actor

@{
    ViewData["Title"] = "Insert";
    Layout = "_NavAndFooterLayout";
}

<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-area-content">
                    <h1>Add Actor Page</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row" style="position:relative">
        <div class="col-md-5 mb-2 mx-auto">
            <form asp-action="Insert" style="position: relative;top: 50px;">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicUrl" class="control-label"></label>
                    <input asp-for="ProfilePicUrl" class="form-control" />
                    <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="theme-btn mb-3" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
