@model IEnumerable<MoviePoint.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "_NavAndFooterLayout";
}

<section class="breadcrumb-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="breadcrumb-area-content">
					<h1>Blog Page</h1>
				</div>
			</div>
		</div>
	</div>
</section><!-- breadcrumb area end -->
<!-- blog area start -->
<section class="blog-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title pb-20">
					<h1><i class="icofont icofont-coffee-cup"></i> Latest News</h1>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col-lg-12">
				@foreach(var item in Model)
				{
					<div class="">
						<div class="single-news">
							<div style="height: 350px;">
								<img src="@item.ImageUrl" alt="MoviePic" style="width:100% !important;height: 350px !important;object-fit:cover !important;" />
							</div>
							<div class="news-date">
								<h2>
									<span>
										@item.StartDate.ToString("MMM").ToUpper()
								</span> @item.StartDate.Day
								</h2>
								<h1>@item.StartDate.Year</h1>
							</div>
							<div class="news-content">
								<h2>@item.Name</h2>
								<p>@item.Description.Substring(0,75)</p>
							</div>
							<a class="theme-btn" asp-action="Details" asp-controller="News" asp-route-id="@item.Id">Read More</a>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>