@model MoviePoint.ViewModel.RoleViewModel

@{
    Layout = "_NavAndFooterLayout";
    ViewData["Title"] = "Asign Role";
    SelectList rolelist = new SelectList(Model.Roles, "Id", "Name");
    SelectList userlist = new SelectList(Model.Users, "Id", "UserName");

}


<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-area-content">
                    <h1>Asign Role Page</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row" style="position:relative">
        <div class="col-md-5 mb-2 mx-auto">
            <form asp-action="AssigRole" style="position: relative;top: 50px;">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleID" class="control-label"></label>
                    <select asp-for="RoleID" class="form-control" asp-items="rolelist"></select>
                    <span asp-validation-for="RoleID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserID" class="control-label"></label>
                    <select asp-for="UserID" class="form-control" asp-items="userlist"></select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="theme-btn mb-3" />
                </div>
                <div class="mb-5">
                    <a asp-action="Home" asp-controller="Home">Back to Home</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
