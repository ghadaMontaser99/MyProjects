<!DOCTYPE html>

<html>
<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Moviepoint - Online Movie,Vedio and TV Show HTML Template</title>
		<!-- Favicon Icon -->
		<link rel="icon" type="image/png" href="/img/favcion.png" />
		<!-- Bootstrap CSS -->
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" media="all" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/css/bootstrap-grid.min.css" integrity="sha512-JQksK36WdRekVrvdxNyV3B0Q1huqbTkIQNbz1dlcFVgNynEMRl0F8OSqOGdVppLUDIvsOejhr/W5L3G/b3J+8w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<!-- Slick nav CSS -->
		<link rel="stylesheet" type="text/css" href="/css/slicknav.min.css" media="all" />
		<!-- Iconfont CSS -->
		<link rel="stylesheet" type="text/css" href="/css/icofont.css" media="all" />
		<!-- Owl carousel CSS -->
		<link rel="stylesheet" type="text/css" href="/css/owl.carousel.css">
		<!-- Popup CSS -->
		<link rel="stylesheet" type="text/css" href="/css/magnific-popup.css">
		<!-- Main style CSS -->
		<link rel="stylesheet" type="text/css" href="/css/style.css" media="all" />
		<!-- Responsive CSS -->
		<link rel="stylesheet" type="text/css" href="/css/responsive.css" media="all" />
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
<body>
	<header class="header">
		<div class="container">
			<div class="header-area">
				<div class="logo">
					<a href="index-2.html"><img src="/img/logo.png" alt="logo" /></a>
				</div>
				<div class="header-right">
					<form action="#">
						<select>
							<option value="Movies">Movies</option>
							<option value="Actors">Actors</option>
							<option value="Cinemas">Cinemas</option>
						</select>
						<input type="text" />
						<button><i class="icofont icofont-search"></i></button>
					</form>
					<ul>
						@if(User.IsInRole("Admin"))
						{
							<li><a href="#">Welcome @User.Identity.Name</a></li>
							<li><a asp-action="Registration" asp-controller="Admin">Sign Up</a></li>
							<li><a asp-action="signOut" asp-controller="Account">Sign Out</a></li>
						}
						else if (User.Identity.IsAuthenticated)
						{
							<li><a href="#">Welcome @User.Identity.Name</a></li>
							<li><a asp-action="signOut" asp-controller="Account">Sign Out</a></li>
						}
						else
						{
							<li><a href="#">Welcome</a></li>

							<li><a asp-action="Login" asp-controller="Account">Login</a></li>
							<li><a asp-action="Registration" asp-controller="Account">Sign Up</a></li>
						}
						
					</ul>
				</div>
				<div class="menu-area">
					<div class="responsive-menu"></div>
					<div class="mainmenu">
						<ul id="primary-menu">
							<li><a asp-action="Home" asp-controller="Home">Home</a></li>
							<li><a asp-action="Index" asp-controller="Movie">Movies</a></li>
							<li><a asp-action="Index" asp-controller="Actors">Actors</a></li>
						    <li><a asp-action="Index" asp-controller="Cinema">Cinemas</a></li>
							<li><a asp-action="Index" asp-controller="Producer">Producers</a></li>
							<li><a asp-action="Index" asp-controller="News">News</a></li>


							<li>
								<a asp-action="Index" asp-controller="Tickets">All Tickets</a>
								@*<ul>
									<li><a href="blog-details.html">Blog Details</a></li>
									<li><a href="movie-details.html">Movie Details</a></li>
								</ul>*@
							</li>
@*						<li><a asp-action="Add" asp-controller="Tickets" class="theme-btn"><i class="icofont icofont-ticket"></i> Tickets</a></li>
*@
							<li class="theme-btn text-center"><a asp-action="Add" asp-controller="Tickets"><i class="icofont icofont-ticket"></i>Tickets</a></li>
					</ul>
					</div>
				</div>
			</div>
		</div>
	</header>

    <div>
        @RenderBody()
    </div>

	<footer class="footer" style="margin-top:5%">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-sm-6">
					<div class="widget">
						<img src="/img/logo.png" alt="about" />
						<p>7th Harley Place, London W1G 8LZ United Kingdom</p>
						<h6><span>Call us: </span>(+880) 111 222 3456</h6>
					</div>
				</div>
				<div class="col-lg-3 col-sm-6">
					<div class="widget">
						<h4>Legal</h4>
						<ul>
							<li><a href="#">Terms of Use</a></li>
							<li><a href="#">Privacy Policy</a></li>
							<li><a href="#">Security</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-3 col-sm-6">
					<div class="widget">
						<h4>Account</h4>
						<ul>
							<li><a href="#">My Account</a></li>
							<li><a href="#">Watchlist</a></li>
							<li><a href="#">Collections</a></li>
							<li><a href="#">User Guide</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-3 col-sm-6">
					<div class="widget">
						<h4>Newsletter</h4>
						<p>Subscribe to our newsletter system now to get latest news from us.</p>
						<form action="#">
							<input type="text" placeholder="Enter your email.." />
							<button>SUBSCRIBE NOW</button>
						</form>
					</div>
				</div>
			</div>
			<hr />
		</div>
		<div class="copyright">
			<div class="container">
				<div class="row">
					<div class="col-lg-6 text-center text-lg-left">
						<div class="copyright-content">
							<p><a target="_blank" href="https://www.templateshub.net">Templates Hub</a></p>
						</div>
					</div>
					<div class="col-lg-6 text-center text-lg-right">
						<div class="copyright-content">
							<a href="#" class="scrollToTop">
								Back to top<i class="icofont icofont-arrow-up"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<!-- jquery main JS -->
	<script src="/js/jquery.min.js"></script>
	<!-- Bootstrap JS -->
	<script src="/js/bootstrap.min.js"></script>
	<!-- Slick nav JS -->
	<script src="/js/jquery.slicknav.min.js"></script>
	<!-- owl carousel JS -->
	<script src="/js/owl.carousel.min.js"></script>
	<!-- Popup JS -->
	<script src="/js/jquery.magnific-popup.min.js"></script>
	<!-- Isotope JS -->
	<script src="/js/isotope.pkgd.min.js"></script>
	<!-- main JS -->
	<script src="/js/main.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
